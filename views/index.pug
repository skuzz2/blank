extends layout

block content
    h3=title
    div(id='login')
      h3 Existing User's Login
      form(id='form', method='post', action='/')
          p Username:&nbsp;
            br
            input(type='text', name='username')
          p Password:&nbsp;
            br
            input(type='password', name='password')
          p
            input(type='submit', value='Log In')
    div(id='divSpacer')        
    div(id='newUser')
      h3 New User Account Creation
      a(href="/create") Create New User
    div(id='canvasHolder')
      hr
      h2(id='canvasHeader') Questions
      div(class='canvas')
        canvas(id='my_canvas1', width='300', height='200')
      div(class='canvas')
        canvas(id='my_canvas2', width='300', height='200')
      div(class='canvas')
        canvas(id='my_canvas3', width='300', height='200')
    script var question_one_data = 'fuck'
    script var question_two_data = 'fuckAgain'
    script var question_three_data = 'fuckForAThirdTime'
    script(src='draw_graph.js')